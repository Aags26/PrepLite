<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFBF7"
    android:scrollbars="vertical"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarStyle="insideOverlay"
    tools:context=".activities.ProfileEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_edit_hdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Name: "/>

        <EditText
            android:id="@+id/name_edit_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/name_edit_hdg"
            android:layout_marginStart="70dp"
            android:layout_toRightOf="@id/name_edit_hdg"
            android:background="@color/white"
            android:fontFamily="@font/amaranth"
            android:hint="Name"
            android:inputType="text"
            android:maxLines="2"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

    <TextView
        android:id="@+id/username_edit_hdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/name_edit_hdg"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Username: "/>

    <EditText
        android:id="@+id/username_edit_et"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/username_edit_hdg"
        android:layout_marginStart="70dp"
        android:layout_toRightOf="@id/name_edit_hdg"
        android:background="@color/white"
        android:fontFamily="@font/amaranth"
        android:hint="Username"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/contact_edit_hdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/username_edit_hdg"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Contact: "/>

    <EditText
        android:id="@+id/contact_edit_et"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/contact_edit_hdg"
        android:layout_marginStart="70dp"
        android:layout_toRightOf="@id/name_edit_hdg"
        android:background="@color/white"
        android:fontFamily="@font/amaranth"
        android:hint="Contact"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/email_edit_hdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/contact_edit_hdg"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Email: "/>

    <EditText
        android:id="@+id/email_edit_et"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/email_edit_hdg"
        android:layout_marginStart="70dp"
        android:layout_toRightOf="@id/name_edit_hdg"
        android:background="@color/white"
        android:fontFamily="@font/amaranth"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="2"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/dob_edit_hdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/email_edit_hdg"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="DOB: "/>

    <EditText
        android:id="@+id/dob_edit_et"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@id/dob_edit_hdg"
        android:layout_marginStart="70dp"
        android:layout_toRightOf="@id/name_edit_hdg"
        android:background="@color/white"
        android:fontFamily="@font/amaranth"
        android:hint="DOB"
        android:inputType="date"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/about_edit_hdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/dob_edit_hdg"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="About: "/>

        <EditText
            android:id="@+id/about_edit_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dob_edit_hdg"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/name_edit_hdg"
            android:background="@color/white"
            android:fontFamily="@font/amaranth"
            android:hint="About"
            android:minLines="3"
            android:gravity="start"
            android:maxLines="8"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/alumnus_edit_hdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_edit_et"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amaranth"
            android:text="Alumnus: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/alumnus_select_spinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/about_edit_et"
            android:layout_marginStart="70dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/name_edit_hdg"
            android:background="@color/white"
            android:textAlignment="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/alumnus_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:fontFamily="@font/amaranth"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="20dp"
                android:onClick="radioChecked"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/alumnus_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:fontFamily="@font/amaranth"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:onClick="radioChecked"/>

        </RadioGroup>

        <TextView
            android:id="@+id/alumnus_insti_edit_hdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alumnus_edit_hdg"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/amaranth"
            android:text="Institutes: "
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/alumnus_institute_select_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/alumnus_select_spinner"
            android:layout_marginStart="70dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/name_edit_hdg"
            android:background="@color/white"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="Select Institute"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/alumnus_company_edit_hdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alumnus_institute_select_tv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/amaranth"
            android:text="Companies: "
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/alumnus_company_select_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/alumnus_institute_select_tv"
            android:layout_marginStart="70dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/name_edit_hdg"
            android:background="@color/white"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:minHeight="40dp"
            android:text="Select Company"
            android:textColor="@color/black"
            android:textSize="18dp"/>

    </RelativeLayout>

</ScrollView>