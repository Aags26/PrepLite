<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ind_post_profile_pic"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_twotone_person_add_100"
            app:shapeAppearanceOverlay="@style/circular"
            app:strokeWidth="1.5dp"
            app:strokeColor="#FF9900"/>

        <TextView
            android:id="@+id/post_layout_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ind_post_profile_pic"
            android:fontFamily="@font/amaranth"
            android:text="Username"
            android:textColor="#0000FF"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_timestamp_hdg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ind_post_profile_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amaranth"
            android:text="Timeframe:"
            android:textColor="#828282"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/post_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ind_post_profile_pic"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/post_timestamp_hdg"
            android:fontFamily="@font/amaranth"
            android:text="dd/mm/yyyy, hh:mm"
            android:textColor="#828282"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_timestamp_hdg"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/amaranth"
            android:text="Post content"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/post_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/comment_tv"
            android:drawableStart="@drawable/ic_outline_comment_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="Comments"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:elevation="10dp"/>

        <ImageView
            android:id="@+id/post_upvote"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/post_content"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_outline_thumb_up_24"
            android:elevation="5dp"/>

        <ImageView
            android:id="@+id/post_downvote"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/post_content"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_toRightOf="@id/post_upvote"
            android:src="@drawable/ic_outline_thumb_down_24"
            android:elevation="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>