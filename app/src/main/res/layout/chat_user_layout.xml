<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/chat_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentStart="true"
            app:shapeAppearanceOverlay="@style/circular"
            android:src="@drawable/ic_baseline_person_24"
            android:background="#A0A0A0"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/chat_person_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/chat_profile_image"
            android:layout_toLeftOf="@id/chat_last_timestamp"
            android:ellipsize="end"
            android:fontFamily="@font/amaranth"
            android:maxLines="1"
            android:text="Profile name"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chat_text_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/chat_profile_image"
            android:layout_toLeftOf="@id/chat_last_timestamp"
            android:layout_below="@id/chat_person_username"
            android:fontFamily="@font/amaranth"
            android:textColor="#828282"
            android:textSize="20dp"
            android:text="Chat text preview"
            android:layout_margin="5dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/chat_last_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/amaranth"
            android:text="77/77/77"
            android:textColor="#A0A0A0"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>