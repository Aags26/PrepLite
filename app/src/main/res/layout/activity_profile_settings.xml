<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileSettingsActivity"
    android:background="#EFFBF7">

    <TextView
        android:id="@+id/acct_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/work_sans_semi_bold"
        android:text="Account"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acct_heading"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/profile_textview"
        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:paddingStart="15dp"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_password"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/profile_textview"
        android:drawableStart="@drawable/ic_baseline_delete_24"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:paddingStart="15dp"
        android:text="Delete account"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/rate_us_hdg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_account"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/work_sans_semi_bold"
        android:text="Rate Us"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate_us_hdg"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:numStars="5"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/profile_textview"
        android:drawableStart="@drawable/ic_baseline_feedback_24"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:paddingStart="15dp"
        android:text="Feedback"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/profile_textview"
        android:drawableStart="@drawable/ic_baseline_info_24"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/work_sans_medium"
        android:gravity="center_vertical"
        android:paddingVertical="5dp"
        android:paddingStart="15dp"
        android:text="About"
        android:textColor="@color/black"
        android:textSize="18dp" />

</RelativeLayout>