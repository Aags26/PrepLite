<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddPostActivity"
    android:background="#EFFBF7"
    >

    <EditText
        android:id="@+id/add_post_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:fontFamily="@font/amaranth"
        android:gravity="start"
        android:hint="Post out your brainss!!"
        android:minLines="10"
        android:maxLines="15"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/add_post_attachment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/add_post_et"
        android:layout_marginVertical="20dp"
        android:background="#EFFBF7"
        tools:listitem="@layout/attachment_card" />

    <TextView
        android:id="@+id/add_post_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:background="@drawable/add_custom_button_shape"
        android:drawableStart="@drawable/ic_send"
        android:paddingStart="10dp"
        android:drawablePadding="20dp"
        android:textAlignment="center"
        android:textSize="18dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/amaranth"
        android:textAllCaps="false"
        android:text="Post!"
        android:paddingVertical="10dp"
        android:paddingEnd="20dp"
        android:elevation="10dp"/>

</RelativeLayout>