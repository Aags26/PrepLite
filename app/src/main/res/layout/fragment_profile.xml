<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFFBF7"
    android:scrollbars="vertical"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarStyle="insideOverlay">

    <ImageView
        android:id="@+id/profile_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_twotone_settings_40" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_display_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_settings"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_part"
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_twotone_person_add_100"
                    app:civ_border_color="#FF9900"
                    app:civ_border_width="3dp"
                    app:shapeAppearanceOverlay="@style/circular" />

                <ImageView
                    android:id="@+id/camera_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_baseline_photo_camera_40"
                    android:layout_toEndOf="@id/profile_pic"
                    android:layout_below="@id/profile_pic"
                    android:layout_marginTop="-40dp"
                    android:layout_marginStart="-25dp"
                    />

                <View
                    android:id="@+id/card_mid"
                    android:layout_width="3dp"
                    android:layout_height="160dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="#dedede" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/full_name_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/amaranth"
                    android:maxWidth="160dp"
                    android:maxLines="2"
                    android:text="@string/name"
                    android:textColor="#FF9900"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/name_separator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/full_name_profile"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#dedede"/>

                <TextView
                    android:id="@+id/username_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_separator"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/amaranth"
                    android:maxWidth="160dp"
                    android:maxLines="1"
                    android:text="@string/username"
                    android:textColor="#FF9900"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <View
                    android:id="@+id/user_name_separator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/username_profile"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#dedede"/>

                <TextView
                    android:id="@+id/email_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name_separator"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/amaranth"
                    android:maxWidth="160dp"
                    android:maxLines="1"
                    android:text="email"
                    android:textColor="#FF9900"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/email_separator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/email_profile"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#dedede" />

                <TextView
                    android:id="@+id/about_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_separator"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/amaranth"
                    android:maxWidth="160dp"
                    android:maxLines="5"
                    android:text="@string/about"
                    android:textColor="#FF9900"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_display_card"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/profile_textview"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="@string/edit_profile"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/user32" />

    <TextView
        android:id="@+id/my_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/profile_textview"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="@string/my_companies"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/briefcase32" />

    <TextView
        android:id="@+id/my_institutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_companies"
        android:layout_alignStart="@+id/my_companies"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/profile_textview"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="@string/my_institutes"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/university" />

    <TextView
        android:id="@+id/my_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_institutes"
        android:layout_alignStart="@+id/my_institutes"
        android:layout_alignEnd="@+id/my_institutes"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/profile_textview"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="@string/my_posts"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/comment" />

    <TextView
        android:id="@+id/logout_butto_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_posts"
        android:layout_alignStart="@+id/my_posts"
        android:layout_alignEnd="@+id/my_posts"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/profile_textview"
        android:drawablePadding="40dp"
        android:elevation="10dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:text="@string/log_out"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/logout" />

    <ImageButton
        android:id="@+id/logout_button_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="205dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/logout_button_theme"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_logout_40"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>